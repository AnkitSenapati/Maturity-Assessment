<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaturityWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: url(https://www.fifthlightmedia.com/img/web.jpg);
            background-size: cover;
        }

        nav {
            color: gold;
        }

        p {
            margin-left: 50px;
            display: inline-flex;
        }
    </style>
</head>

<body style="color:black;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div style="background-color:gold;" class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Registers" asp-action="LoginUser" >Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Registers" asp-action="Add">Register</a>
                        </li>
                    </ul>
                    <form class="d-flex" style="margin-left:900px">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="float:left">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <b> <a asp-area="" asp-controller="Home" asp-action="Index"><button class="btn btn-success">Home</button></a></b>
                        </li>
                        <li class="nav-item">
                            <b> <a class="nav-link text-dark" asp-controller="Registers" asp-action="LoginUser"><button class="btn btn-success">Login</button></a></b>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>*@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Survey - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
