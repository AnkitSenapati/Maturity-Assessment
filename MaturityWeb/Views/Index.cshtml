@model IEnumerable<MaturityDAL.Models.Function>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FunctionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FunctionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FunctionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FunctionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FunctionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
