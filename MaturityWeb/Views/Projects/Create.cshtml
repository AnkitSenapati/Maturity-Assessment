@model MaturityDAL.Models.Project
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <div class="container" style="width:40%;margin-top:2%">
        <a href="#" style="background:none;" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Project</a>
        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Project</h5>
                        <a href="#" class="close" data-dismiss="model">&times;</a>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-4">
@*                                <form id="myForm" asp-action="Create">
*@                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="ProjectName" class="control-label"></label>
                                        <input asp-for="ProjectName" class="form-control" />
                                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDesc" class="control-label"></label>
                                        <input asp-for="ProjectDesc" class="form-control" />
                                        <span asp-validation-for="ProjectDesc" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FunctionId" class="control-label"></label>
                                        <select asp-for="FunctionId" class="form-control" asp-items="ViewBag.FunctionId"></select>
                                    </div>
@*                                </form>
*@                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" value="Create" class="btn btn-primary" id="btnSubmit">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function () {

                var myformdata = $("#myForm").serialize();

                $.ajax({
                    type: "POST",
                    url: "/Projects/Create",
                    data = myformdata,
                    success: function () {
                        $("#myModal").modal("hide");
                    }
                })
            })
        })
    </script>


