@model IEnumerable<MaturityDAL.Models.ProjectMember>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectMemberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectMemberId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectMemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
